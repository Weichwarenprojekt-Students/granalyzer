{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:docker:win": "cd ../client & npm run build & cd ../server & nest build & cd .. & docker build -t granalyzer . & docker create -p 3000:3000 --name granalyzer granalyzer & docker start granalyzer",
    "build:docker:linux": "cd ../client & npm run build; cd ../server; nest build; cd ..; docker build -t granalyzer .; docker create -p 3000:3000 --name granalyzer granalyzer; docker start granalyzer",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --group=unit",
    "test:database": "jest --group=db --runInBand",
    "test:all": "jest --forceExit --runInBand",
    "test:watch": "jest --group=unit --watch",
    "test:docker:win": "docker-compose -f test/docker-compose.yml up --build --abort-on-container-exit & docker-compose -f test/docker-compose.yml down --volumes --rmi local",
    "test:docker:linux": "docker-compose -f test/docker-compose.yml up --build --abort-on-container-exit; docker-compose -f test/docker-compose.yml down --volumes --rmi local",
    "test:docker:github": "docker-compose -f test/docker-compose.yml up --build --abort-on-container-exit",
    "test:cov": "jest --group=unit --coverage",
    "test:all:cov": "jest --coverage --runInBand",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "scheme": "ts-node src/data-scheme/generation-script/index.ts"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.13",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.13",
    "@nestjs/platform-express": "^7.6.13",
    "@nestjs/serve-static": "^2.1.4",
    "@nestjs/swagger": "^4.8.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "neo4j-driver": "^4.2.3",
    "nest-neo4j": "^0.1.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.13",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-runner-groups": "^2.0.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  },
  "jest": {
    "runner": "groups",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      ".*\\.module\\.ts$"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
